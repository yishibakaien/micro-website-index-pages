html,body,.container-wrapper,search-container
    height 100%
.bg
    min-height 100%
    height auto
    width 100%
    background-size 100% 100%
    background-repeat no-repeat
    background-position center
.main
    overflow hidden
.sticky-blank
    margin-top -2px
    padding-bottom 38px
.search
    display flex
    margin 16px auto 0 auto
    width 80%
    height 30px
    border-radius 15px
    line-height 30px
    background-color rgba(255, 255, 255, .1)
    .find
        flex 0 0 50px
        width 50px
        text-align center
        font-size 22px
        color rgba(255, 255, 255, .8)
    .camera
        flex 0 0 50px
        width 50px
        font-size 22px
        color rgba(255, 255, 255, .8)
        text-align center
    .text
        flex 1
        font-size 12px
        color rgba(255, 255, 255, .5)
.footer
    /*position absolute
    bottom -36px
    left 0
    right 0*/
    position relative
    margin-top -36px
    width 100%
    height 36px
    line-height 18px
    text-align center
    font-size 12px
    color #fff
    background-color rgba(0, 0, 0, .3)