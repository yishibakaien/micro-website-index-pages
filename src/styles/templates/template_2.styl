.bg
  background-image url('../../images/template_2.jpg')

.search
  background-color rgba(0, 0, 0, .2)

.list-container
  width 80%
  background-color rgba(0, 0, 0, .3)
  margin 80% auto 55px auto
  padding-top 24px
  padding-bottom 18px
  overflow hidden

  .list
    width 33%
    height 56px
    float left
    text-align center
    -webkit-box-sizing border-box
    box-sizing border-box
    border none
    position relative

    .iconfont
      color #fff
      font-size 28px
      line-height 28px

    .text
      color rgba(255, 255, 255, .8)
      font-size 12px
      line-height 30px

  .list:nth-child(1), .list:nth-child(2), .list:nth-child(3)
    margin-bottom 32px

  .list:nth-child(2):after, .list:nth-child(5):after
    content ''
    width 200%
    height 200%
    position absolute
    left 0
    top 0
    color rgba(255, 255, 255, .4)
    -webkit-box-sizing border-box
    box-sizing border-box
    border-left 1px solid rgba(255, 255, 255, .4)
    border-right 1px solid rgba(255, 255, 255, .4)
    -webkit-transform scale(0.5)
    transform scale(0.5)
    -webkit-transform-origin left top
    transform-origin left top
















