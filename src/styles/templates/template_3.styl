.sticky-blank
  background-color #fff

.main
  background-color #00b9db

.logo-container
  width 100%
  height 270px
  display flex
  justify-content center
  align-items center

.logo-wrapper
  background-color #fff
  height 156px
  width 156px
  border-radius 50%
  display flex
  align-items center
  justify-content center
  overflow hidden

.logo
  height 139px
  width 139px
  background-image url('../../images/template_7_logo.png')
  background-size 100% 100%
  background-repeat no-repeat
  background-position center

.list-container
  width 100%
  overflow hidden
  background-color #fff

  .list
    width 33%
    height 125px
    padding-top 28px
    float left
    text-align center
    -webkit-box-sizing border-box
    box-sizing border-box
    border none
    position relative

    .iconfont
      color #fff
      display inline-block
      height 50px
      width 50px
      background-color #70a9ff
      border-radius 50%
      font-size 28px
      line-height 50px

    .text
      color #999
      font-size 12px
      line-height 30px

  .list:nth-child(2):after, .list:nth-child(5):after
    content ''
    width 200%
    height 200%
    position absolute
    left 0
    top 0
    color #e8e8e8
    -webkit-box-sizing border-box
    box-sizing border-box
    border-left 1px solid #e8e8e8
    border-right 1px solid #e8e8e8
    -webkit-transform scale(0.5)
    transform scale(0.5)
    -webkit-transform-origin left top
    transform-origin left top

  .list:before
    content ''
    width 200%
    height 200%
    position absolute
    left 0
    top 0
    color #e8e8e8
    -webkit-box-sizing border-box
    box-sizing border-box
    border-bottom 1px solid #e8e8e8
    -webkit-transform scale(0.5)
    transform scale(0.5)
    -webkit-transform-origin left top
    transform-origin left top

.footer
  color #999
  background-color #e8e8e8
















