.bg
  background-image url('../../images/template_7.jpg')

.logo-container
  width 80%
  height 181px
  margin 30px auto
  background-color rgba(255,255,255,.1)
  border-radius 8px
  position relative

.logo-wrapper
  background-color #fff
  -webkit-box-sizing border-box
  box-sizing border-box
  position absolute
  left 24px
  right 24px
  bottom 24px
  top 24px
  display flex
  align-items center
  justify-content center

.logo-wrapper:after
  content ''
  position absolute
  top 0
  left 0
  border 1px solid #979797
  -webkit-box-sizing border-box
  box-sizing border-box
  width 200%
  height 200%
  -webkit-transform scale(0.5)
  transform scale(0.5)
  -webkit-transform-origin left top
  transform-origin left top

.logo
  height 120px
  width 120px
  background-image url('../../images/template_7_logo.png')
  background-size 100% 100%
  background-repeat no-repeat
  background-position center

.list-container
  width 80%
  margin 0 auto
  margin-bottom 36px
  overflow hidden

  .list
    width 30%
    height 110px
    margin-bottom 5%
    border-radius 8px
    background-color rgba(255,255,255,.1)
    float left
    text-align center

    .iconfont
      color #fff
      font-size 32px
      line-height 72px

    .text
      color #fff
      font-size 12px
      line-height 16px

  .list:nth-child(2), .list:nth-child(5)
    margin-right 5%
    margin-left 5%








